---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import HeroSection from "../components/HeroSection.astro";
import Normas from "../components/Normas.astro";
import Form from "../components/Form.astro";
import CarruselInfito from "../components/CarruselInfito.astro";
import Oferta from "../components/Oferta.jsx";
import Potencia from "../components/Potencia.astro";
import Container from "../components/Container.astro";
import Razones from "../components/Razones.astro";
import Aranceles from "../components/Aranceles.astro";
import Sedes from "../components/Sedes.astro";
---

<Layout title="UCASAL: ¡Inicia tu Carrera en Agosto!">
  <Navbar />
  <HeroSection />
  <Form />
  <Container>
    <Oferta client:only="react" />
  </Container>
  <Potencia />
  <Razones />
  <Aranceles />
  <Sedes />
  <CarruselInfito />
  <Footer />
</Layout>

<style is:global>
  @font-face {
    font-family: "Museo Sans";
    font-style: normal;
    font-weight: 300;
    src: url("/landing/ingreso-carreras-ucasal-aut/fonts/MuseoSans_300.otf") format("opentype");
  }

  @font-face {
    font-family: "Museo Sans";
    font-style: normal;
    font-weight: 500;
    src: url("/landing/ingreso-carreras-ucasal-aut/fonts/MuseoSans_500.otf") format("opentype");
  }

  @font-face {
    font-family: "Museo Sans";
    font-style: normal;
    font-weight: 700;
    src: url("/landing/ingreso-carreras-ucasal-aut/fonts/MuseoSans_700.otf") format("opentype");
  }

  @font-face {
    font-family: "Museo Sans";
    font-style: normal;
    font-weight: 900;
    src: url("/landing/ingreso-carreras-ucasal-aut/fonts/MuseoSans_900.otf") format("opentype");
  }
  .bigTitle {
    display: inline-block;
    color: #ee1818;
    font-weight: 900;
    font-size: 1.5em;
    font-family: "Museo Sans";
  }
  .neumorphism-component {
  background-color: #f0f0f0; /* Fondo más claro */
  border-radius: 0 0 15px 15px; /* Bordes redondeados solo en la parte inferior */
  box-shadow: 
    inset 10px 10px 20px #d1d1d1,  /* Sombra interna oscura (ajustada para el nuevo color de fondo) */
    inset -10px -10px 20px #ffffff, /* Sombra interna clara */
    10px 10px 20px rgba(0, 0, 0, 0.2), /* Sombra externa oscura */
    -10px -10px 20px rgba(255, 255, 255, 0.7); /* Sombra externa clara */
}
</style>
