---
import Container from "./Container.astro"
import Boton from "./boton.astro"
---
<main class="snap-y snap-mandatory relative w-full h-screen overflow-hidden">
  <div class="snap-center">
    <section class="bg-black h-screen w-full text-center relative overflow-hidden z-0 flex flex-col justify-end lg:justify-center">
<Container>
      <div class="justify-start grid grid-cols-1 items-center lg:py-3">
        <div class="z-50">
          <h1 class="block leading-3 text-white rounded-lg text-4xl md:text-5xl font-thin py-2 text-left transform-gpu tracking-wide" style="text-shadow: 0 0 60px #0000; font-family: \'Bebas Neue\', sans-serif;">
            <span class="text-3xl font-thin md:text-6xl tracking-wide">INICI&Aacute; TU CARRERA</span><br>
            <span class="text-6xl font-semibold md:text-9xl tracking-wide">DESEADA</span>
          </h1>
        </div>
        <div class="items-center z-50 xs:justify-items-start lg:justify-start flex">
          <Boton label="Solicitar Informacion" onclick="scrollToForm('#formu')" >
        </div>
      </div>
      <div class="absolute top-0 left-0 w-full h-full overflow-hidden">
        <picture class="w-full h-full">
          <source media="(max-width: 767px)" srcset="../ingreso-carreas-agosto-mobile.webp" />
          <source media="(min-width: 768px)" srcset="../ingreso-carreas-agosto-desktop.webp" />
          <img src="../ingreso-carreas-agosto-mobile.webp" class="w-full h-full object-cover"
            alt="Inicia en Agosto" />
          <div class="overlay hidden md:block lg:block xl:block"></div>
        </picture>
      </div>
    </Container>
    </section>
  </div>
</main>
<h1 class="bg-[#B11111] bg-auto text-white h-[40px] flex items-center justify-center text-lg font-extrabold">
EDUCANDO CORAZONES INTELIGENTES
</h1>

<style> 
.overlay {
            top: 0;
            position: absolute;
            width: 100%;
            left: 0;
            background-color: rgba(0, 0, 0, 0.2);
            /* Ajusta la opacidad a tu gusto */
            height: 100%;
            z-index: 1;
}
</style>