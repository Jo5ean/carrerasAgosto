---
import Container from "./Container.astro"
---
<Container>
    <h2 class="bigTitle mt-5 shadow-black">
        <span style="color: rgb(97, 96, 96)">Razones para elegir</span>&nbsp;UCASAL:
    </h2>
    <div class="hidden lg:block md:hidden sm:hidden">
        <div class="flex justify-center items-center">
            <div class="container d-none lg:d-block md:d-block sm:d-none mb-5">
                <div class="grid grid-cols-6 gap-2 mx-auto">
                    <div class="text-center">
                        <img class="mx-auto w-24" src="/landing/ingreso-carreras-ucasal/razones/Becas.svg" alt="becas" />
                        <p class="texto-clases text-center font-bold mt-1">Becas</p>
                    </div>
                    <div class="text-center">
                        <img class="mx-auto w-24" src="/landing/ingreso-carreras-ucasal/razones/Prog. Internacionales.svg"
                            alt="programas internacionales" />
                        <p class="texto-clases text-center font-bold mt-1">
                            Programas Internacionales
                        </p>
                    </div>
                    <div class="text-center">
                        <img class="mx-auto w-24" src="/landing/ingreso-carreras-ucasal/razones/Idiomas.svg" alt="idiomas" />
                        <p class="texto-clases text-center font-bold mt-1">Idiomas</p>
                    </div>
                    <div class="text-center">
                        <img class="mx-auto w-24" src="/landing/ingreso-carreras-ucasal/razones/Pasantias.svg" alt="pasantias" />
                        <p class="texto-clases text-center font-bold mt-1">Pasantías</p>
                    </div>
                    <div class="text-center">
                        <img class="mx-auto w-24" src="/landing/ingreso-carreras-ucasal/razones/Bolsa de Trabajo.svg"
                            alt="bolsa de trabajo" />
                        <p class="texto-clases text-center font-bold mt-1">
                            Bolsa de Trabajo
                        </p>
                    </div>
                    <div class="text-center">
                        <img class="mx-auto w-24" src="/landing/ingreso-carreras-ucasal/razones/Orientacion.svg"
                            alt="centro de orientacion educativa" />
                        <p class="texto-clases text-center font-bold mt-1">
                            Centro de Orientación Educativa
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="indicators-carousel" class="relative w-full block lg:hidden md:block sm:block" data-carousel="static">
        <!-- Carousel wrapper -->
        <div class="relative h-56 overflow-hidden rounded-lg md:h-96">
          <!-- Item 1 -->
          <div class="duration-700 ease-in-out absolute inset-0 transition-transform transform translate-x-0 z-20" data-carousel-item="active">
              <div class="flex flex-col items-center justify-center absolute w-full h-full">
                  <img src="/landing/ingreso-carreras-ucasal/razones/Becas.svg" class="block w-1/3" alt="becas">
                  <p class="texto-clases text-center font-bold">Becas</p>
              </div>
          </div>
          <!-- Item 2 -->
          <div class="duration-700 ease-in-out absolute inset-0 transition-transform transform translate-x-full z-10" data-carousel-item="">
              <div class="flex flex-col items-center justify-center absolute w-full h-full">
                  <img src="/landing/ingreso-carreras-ucasal/razones/Prog. Internacionales.svg" class="block w-1/3" alt="programas internacionales">
                  <p class="texto-clases text-center font-bold">Programas Internacionales</p>
              </div>
          </div>
          <!-- Item 3 -->
          <div class="hidden duration-700 ease-in-out absolute inset-0 transition-transform transform" data-carousel-item="">
              <div class="flex flex-col items-center justify-center absolute w-full h-full">
                  <img src="/landing/ingreso-carreras-ucasal/razones/Idiomas.svg" class="block w-1/3" alt="idiomas">
                  <p class="texto-clases text-center font-bold">Idiomas</p>
              </div>
          </div>
          <!-- Item 4 -->
          <div class="hidden duration-700 ease-in-out absolute inset-0 transition-transform transform" data-carousel-item="">
              <div class="flex flex-col items-center justify-center absolute w-full h-full">
                  <img src="/landing/ingreso-carreras-ucasal/razones/Pasantias.svg" class="block w-1/3" alt="pasantias">
                  <p class="texto-clases text-center font-bold">Pasantías</p>
              </div>
          </div>
          <!-- Item 5 -->
          <div class="hidden duration-700 ease-in-out absolute inset-0 transition-transform transform" data-carousel-item="">
              <div class="flex flex-col items-center justify-center absolute w-full h-full">
                  <img src="/landing/ingreso-carreras-ucasal/razones/Bolsa de Trabajo.svg" class="block w-1/3" alt="bolsa de trabajo">
                  <p class="texto-clases text-center font-bold">Bolsa de Trabajo</p>
              </div>
          </div>
          <!-- Item 6 -->
          <div class="duration-700 ease-in-out absolute inset-0 transition-transform transform -translate-x-full z-10" data-carousel-item="">
              <div class="flex flex-col items-center justify-center absolute w-full h-full">
                  <img src="/landing/ingreso-carreras-ucasal/razones/Orientacion.svg" class="block w-1/3" alt="centro de orientacion educativa">
                  <p class="texto-clases text-center font-bold">Centro de Orientación Educativa</p>
              </div>
          </div>
        </div>
        
        
        <!-- Slider controls -->
        <button type="button" class="absolute top-0 left-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev="">
            <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-400 dark:bg-gray-800/30 group-hover:bg-gray-600 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                <svg class="w-4 h-4 text-white dark:text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"></path>
                </svg>
                <span class="sr-only">Previous</span>
            </span>
        </button>
        <button type="button" class="absolute top-0 right-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next="">
            <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-400 dark:bg-gray-800/30 group-hover:bg-gray-600 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                <svg class="w-4 h-4 text-white dark:text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"></path>
                </svg>
                <span class="sr-only">Next</span>
            </span>
        </button>
        </div>
</Container>