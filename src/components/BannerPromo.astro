<div id="sticky-banner" tabindex="-1"
class="flex justify-between w-full p-1 border-b border-gray-200 bg-[#B11111] bg-opacity-90">
  <div class="flex items-center mx-auto">
    <p id="promo" class="flex items-center text-sm lg:text-lg font-light text-white">
      &#128163; &iexcl;Aprovech&aacute;! <span class="font-extrabold text-sm lg:text-lg">&nbsp;20% OFF</span>&nbsp;hasta el 08/07/2024
    </p>
  </div>
  <div class="flex items-center">
    <button data-dismiss-target="#sticky-banner" type="button"
    class="flex-shrink-0 inline-flex justify-center w-7 h-7 items-center text-white hover:text-black rounded-lg text-sm p-1.5">
    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
        d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
    </svg>
      <span class="sr-only">Close banner</span>
    </button>
  <script is:inline async defer>
      const textos = [
          '&#128163; &iexcl;Aprovech&aacute;! <span class="font-extrabold text-sm lg:text-lg">&nbsp;20% OFF</span>&nbsp;hasta el 08/07/2024',
          '&#127881; &iexcl;No te lo pierdas! <span class="font-extrabold text-sm lg:text-lg">',
          '&#128176; &iexcl;Oferta especial! <span class="font-extrabold text-sm lg:text-lg">&nbsp;Solo para vos!',
      ];

      let Index = 0;
      const promocion = document.getElementById('promo');

      function cambiarTexto() {
          Index = (Index + 1) % textos.length;
          promocion.innerHTML = textos[Index];
      }

      setInterval(cambiarTexto, 3000); // Cambia el texto cada 3 segundos
  </script>
  </div>
</div>